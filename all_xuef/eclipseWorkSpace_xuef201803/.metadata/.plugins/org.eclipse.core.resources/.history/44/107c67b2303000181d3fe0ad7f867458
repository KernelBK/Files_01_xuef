package com.xuef.ssm.test;

import static org.junit.Assert.*;

import org.junit.Test;
import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import com.xuef.ssm.dao.EmployeeMapper;
import com.xuef.ssm.domain.EmployeeExample;

public class EmployeeDaoTest {
	@Test
	public void testselectByExample() {
		// 获取IOC容器
		ApplicationContext ioc = 
				new ClassPathXmlApplicationContext("applicationContext.xml");
		// 得到mapper的实例
		EmployeeMapper employeeMapper = ioc.getBean(EmployeeMapper.class);
		
		//??? EmployeeExample 怎么使用
		employeeMapper.selectByExample(new EmployeeExample());
	}

}
