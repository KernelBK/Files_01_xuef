package com.xuef.architect.customermgr.dao;

import com.xuef.architect.customermgr.vo.CustomerModel;
import com.xuef.architect.customermgr.vo.CustomerQueryModel;

public interface CustomerDAO {
	public void create(CustomerModel cm);
	public void update(CustomerModel cm);
	public void delete(Integer id);
		
	/**
	 * 根据 id 查询顾客
	 */
	public CustomerModel getByUuid(Integer id);
	
	public List<CustomerModel> getByCondition(CustomerQueryModel cqm);
}
