package com.xuef201803.book_dp.simpleFactory;

public class SimpleFac {
	public static Api getInstance(int flag){
		/**
		 * 工厂并不自己制造对象，它只是做出选择。
		 * 当然是根据条件或者参数来选择；
		 * 参数来源于：
		 * 1. 客户端
		 * 2. 配置文件
		 * 3. 程序运行期的某个值，
		 */
		if(1==flag){
			return new ApiImplA();
		}else{
			return new ApiImplB();
		}
	}
}
