	@Override
	public Book getBook(int id) {
		// sql 嵌在java代码中，不好。mybatis 解决这个问题
		String sql = "select id, author, title, price, publishingdate,"
				+ " salesamount, storenumber from mybooks "
				+ "where id = ?";
		Book book = query(sql, id);
		return book;
	}

