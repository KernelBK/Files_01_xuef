public class BaseDao<T> implements Dao4DBUtils<T> {
	private QueryRunner queryRunner = new QueryRunner();

	private Class<T> clazz;
	
	public BaseDao() {
		clazz = ReflectionUtils.getSuperGenericType(getClass());
	}
	
}
